---
const request = await fetch('https://jsonplaceholder.typicode.com/posts?_limit=5');
const posts = await request.json();

import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="About" description="This page shows the latest 5 posts from the JSONPlaceholder API.">
    <h1>About posts</h1>
    <p>This page shows the latest 5 posts from the JSONPlaceholder API.</p>
    <div>
        {posts.map((post) => (
            <h2>{post.title}</h2>
            <p>{post.body}</p>
        ))}
    </div>
    <a href="/">Return</a>
</MainLayout>


<style lang="scss">
    h2 {
        color: blue;
    }
    p {
        color: green;
    }
    a {
        color: red;
    }
</style>